<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">
	<display-name>ProgettoTIWJS</display-name>
	<context-param>
		<param-name>dbUrl</param-name>
		<param-value>jdbc:mysql://localhost:3306/dbtest?serverTimezone=UTC</param-value>
	</context-param>
	<context-param>
		<param-name>dbUser</param-name>
		<param-value>root</param-value>
	</context-param>
	<context-param>
		<param-name>dbPassword</param-name>
		<param-value>1234</param-value>
	</context-param>
	<context-param>
		<param-name>dbDriver</param-name>
		<param-value>com.mysql.cj.jdbc.Driver</param-value>
	</context-param>
	<filter>
		<filter-name>Checker</filter-name>
		<filter-class>it.polimi.tiw.progetti.filters.Checker</filter-class>
	</filter>
	<filter>
		<filter-name>DocenteChecker</filter-name>
		<filter-class>it.polimi.tiw.progetti.filters.DocenteChecker</filter-class>
	</filter>
	<filter>
		<filter-name>StudenteChecker</filter-name>
		<filter-class>it.polimi.tiw.progetti.filters.StudenteChecker</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>Checker</filter-name>
		<url-pattern>/DocenteHomePage</url-pattern>
		<url-pattern>/ElencoVerbali</url-pattern>
		<url-pattern>/Esito</url-pattern>
		<url-pattern>/Iscritti</url-pattern>
		<url-pattern>/ModificaStudente</url-pattern>
		<url-pattern>/PaginaVerbale</url-pattern>
		<url-pattern>/StudenteHomePage</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>DocenteChecker</filter-name>
		<url-pattern>/DocenteHomePage</url-pattern>
		<url-pattern>/ElencoVerbali</url-pattern>
		<url-pattern>/Iscritti</url-pattern>
		<url-pattern>/ModificaStudente</url-pattern>
		<url-pattern>/PaginaVerbale</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>StudenteChecker</filter-name>
		<url-pattern>/Esito</url-pattern>
		<url-pattern>/StudenteHomePage</url-pattern>
	</filter-mapping>
	<welcome-file-list>
		<welcome-file>loginPage.html</welcome-file>
	</welcome-file-list>
</web-app>